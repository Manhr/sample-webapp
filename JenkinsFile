pipeline {
    agent { label 'agents' }

    stages {
        stage('Checkout') {
            steps {
                checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[
                                                    url: 'https://github.com/Manhr/sample-webapp',
                                                    credentialsId: 'git_token'
                                            ]]
                ])
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy to Artifactory') {
            steps {
                configFileProvider([configFile(fileId: '3fd48c28-1965-4a19-bb6d-d513026fd117', variable: 'MAVEN_SETTINGS')]) {
                    sh 'mvn deploy -s $MAVEN_SETTINGS'
                }
            }
        }
        stage("Docker Build") {
                    steps {
                        sh 'docker build -t sample-webapp .'
                    }
        }
    }
}
