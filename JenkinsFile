pipeline {
    agent { label 'agent' }
    stages {
        stage('Checkout') {
            steps {
                checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[
                                                    url: 'https://github.com/devops5014/sample-webapp.git',
                                                    credentialsId: 'github-token'
                                            ]]
                ])
            }
        }
        stage('Build') {
            steps {
                sh '''
                    mvn clean install
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    mvn test
                '''
            }
        }
        stage('Deploy To Artifactory') {
            steps {
                configFileProvider([configFile(fileId: 'd4bb65b2-b8c0-45cd-a3dc-2354145e59a1', variable: 'MAVEN_SETTINGS')]) {
                    sh '''
                        mvn deploy -s $MAVEN_SETTINGS
                    '''
                }
            }
        }
        stage('Deploy War To Tomcat') {
            steps {
                sh '''
                    echo "Deployed war file to tomcat"
                '''
            }
        }
    }
}